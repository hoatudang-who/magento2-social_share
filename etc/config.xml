<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <socialshare>
            <general>
                <enable_module>1</enable_module>
                <sharecounter>1</sharecounter>
                <more_share>1</more_share>
            </general>
            <button_config>
                <facebook>
                    <enabled>1</enabled>
                </facebook>
                <twitter>
                    <enabled>1</enabled>
                </twitter>
                <pinterest>
                    <enabled>1</enabled>
                </pinterest>
                <linkedin>
                    <enabled>1</enabled>
                </linkedin>
            </button_config>
            <button_position>
                <cms_page>left</cms_page>
                <categore_page>left</categore_page>
                <product_page>left</product_page>
                <contact_page>left</contact_page>
            </button_position>
            <button_style>
                <style>icon</style>
                <icon_size>32x32</icon_size>
                <background_color>standard</background_color>
                <color>standard</color>
            </button_style>
        </socialshare>
    </default>
</config>